# The GiveHub .env Configuration Example
# Make a copy of this file named .env and fill in your specific settings

# MongoDB Connection Settings
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=givehub
MONGODB_USERNAME=
MONGODB_PASSWORD=

# JWT Authentication
JWT_SECRET=your_secure_random_string_here
JWT_EXPIRE=86400

# Application Settings
APP_ENV=development
APP_DEBUG=true

# Stellar XLM Wallet Configuration
STELLAR_PUBLIC_KEY=GXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
STELLAR_SECRET_KEY=SXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
STELLAR_NETWORK=testnet

# Ethereum Wallet Configuration
ETHEREUM_ADDRESS=0xXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
ETHEREUM_PRIVATE_KEY=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
ETHEREUM_NETWORK=goerli
ETHEREUM_INFURA_PROJECT_ID=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Bitcoin Wallet Configuration
BITCOIN_ADDRESS=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
BITCOIN_PRIVATE_KEY=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
BITCOIN_NETWORK=testnet

# Cryptocurrency Settings
DEFAULT_DONATION_CURRENCY=XLM
ENABLE_MULTIPLE_CRYPTOCURRENCIES=true

# Other API Keys
FACE_API_KEY=your_face_api_key
AWS_ACCESS_KEY=your_aws_access_key
AWS_SECRET_KEY=your_aws_secret_key